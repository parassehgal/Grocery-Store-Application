<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout1"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/baap"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"

                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="55sp"
        android:textAlignment="center"
        android:fontFamily="cursive"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:src="@drawable/lotion"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/image01"
                    android:layout_weight="1"
                    android:background="@drawable/square"
                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="220dp"
                    android:src="@drawable/perfumes"

                    android:id="@+id/image02"
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/square"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/grid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:columnCount="2"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/image03"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="220dp"
                    android:layout_marginLeft="5dp"


                    android:background="@drawable/square"
                    android:onClick="chips"
                    android:src="@drawable/juices" />


                <ImageButton
                    android:id="@+id/image04"

                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/square"
                    android:onClick="noodles"
                    android:src="@drawable/chocolate"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"

                >


                <ImageButton
                    android:id="@+id/image05"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/square"
                    app:srcCompat="@drawable/namkeen" />

                <ImageButton
                    android:id="@+id/image06"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/square"
                    android:layout_marginLeft="23dp"
                    app:srcCompat="@drawable/egg1" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:layout_width="0dp"
                    android:id="@+id/image07"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:src="@drawable/biscuits"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/square"/>

                <ImageButton
                    android:id="@+id/image08"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:background="@drawable/square"
                    android:src="@drawable/kitchen"
                    android:layout_marginLeft="23dp"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</android.support.v4.widget.DrawerLayout>
